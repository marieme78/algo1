ALGORITHM checkpointalgo1
VAR
    set_declarations
    phrase:STRING;
    nbr_mot,nbr_voyelle:INTEGER;

BEGIN
    set_instructions
    Write("Donne moi une phrase avec un .")
    Read(phrase)
    IF (phrase[phrase.length]!== ".") THEN
        set_instructions
        Write("Ta phrase n'a pas de .")
    END_IF
    
    nbr_mot:=1

    FOR i FROM 0 TO phrase.length STEP 1  DO
        set_instructions
        IF (phrase[i]==" ") THEN
            set_instructions
            nbr_mot:=nbr_mot+1
        END_IF            
    END_FOR

    Write("le nombre de mot est", nbr_mot)

    nbr_voyelle:=1
    FOR i FROM 0 TO phrase.length STEP 1  DO
        set_instructions
        IF (phrase[i] == "ygygyyg") THEN
            set_instructions
            nbr_voyelle:=nbr_voyelle+1
        END_IF
    END_FOR
END